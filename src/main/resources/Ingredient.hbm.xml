<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="api.v1.Models.Ingredient" table="Ingredients">
        <meta attribute="class-description">
            This class contains the details about ingredients.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="name" column="name" type="string"/>
        <property name="quantity" column="quantity" type="java.lang.Double"/>
        <property name="unit" column="unit" type="string"/>
    </class>
</hibernate-mapping>