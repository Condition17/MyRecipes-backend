<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">cristi</property>
        <property name="hibernate.connection.password">cristi</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/recipesdb</property>
        <property name="connection_pool_size">1</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping resource="Recipe.hbm.xml"></mapping>
        <mapping resource="Image.hbm.xml"></mapping>
        <mapping resource="Step.hbm.xml"></mapping>
        <mapping resource="Ingredient.hbm.xml"></mapping>
    </session-factory>
</hibernate-configuration>